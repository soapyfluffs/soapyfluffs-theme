{% comment %}
  Paw Print Design Element for SoapyFluffs - Based on Wokiee theme
  Incorporates subtle furry community references with broad appeal
{% endcomment %}

<div class="paw-print-element {% if section.settings.position == 'left' %}paw-print-element--left{% else %}paw-print-element--right{% endif %}" style="opacity: {{ section.settings.opacity | divided_by: 100.0 }};">
  <div class="paw-print-element__container">
    <svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="paw-print-element__svg">
      <path d="M35.5,60 C42.4,60 48,54.4 48,47.5 C48,40.6 42.4,35 35.5,35 C28.6,35 23,40.6 23,47.5 C23,54.4 28.6,60 35.5,60 Z" fill="currentColor"/>
      <path d="M84.5,60 C91.4,60 97,54.4 97,47.5 C97,40.6 91.4,35 84.5,35 C77.6,35 72,40.6 72,47.5 C72,54.4 77.6,60 84.5,60 Z" fill="currentColor"/>
      <path d="M25.5,85 C32.4,85 38,79.4 38,72.5 C38,65.6 32.4,60 25.5,60 C18.6,60 13,65.6 13,72.5 C13,79.4 18.6,85 25.5,85 Z" fill="currentColor"/>
      <path d="M94.5,85 C101.4,85 107,79.4 107,72.5 C107,65.6 101.4,60 94.5,60 C87.6,60 82,65.6 82,72.5 C82,79.4 87.6,85 94.5,85 Z" fill="currentColor"/>
      <path d="M60,107 C71.6,107 81,97.6 81,86 C81,74.4 71.6,65 60,65 C48.4,65 39,74.4 39,86 C39,97.6 48.4,107 60,107 Z" fill="currentColor"/>
    </svg>
    
    {% if section.settings.show_free_sniffs %}
      <div class="paw-print-element__text">
        <span class="paw-print-element__free-sniffs">FREE SNIFFS</span>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .paw-print-element {
    position: absolute;
    z-index: 1;
    pointer-events: none;
  }
  
  .paw-print-element--left {
    left: 0;
    top: 50%;
    transform: translateY(-50%);
  }
  
  .paw-print-element--right {
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }
  
  .paw-print-element__container {
    position: relative;
  }
  
  .paw-print-element__svg {
    color: {{ section.settings.color }};
  }
  
  .paw-print-element__text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-15deg);
    text-align: center;
    width: 100%;
  }
  
  .paw-print-element__free-sniffs {
    font-family: 'Comic Sans MS', cursive, sans-serif;
    font-size: 14px;
    font-weight: bold;
    color: {{ section.settings.text_color }};
    background-color: {{ section.settings.text_background }};
    padding: 3px 8px;
    border-radius: 10px;
    display: inline-block;
    white-space: nowrap;
  }
</style>

{% schema %}
{
  "name": "Paw Print Element",
  "settings": [
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        {
          "value": "left",
          "label": "Left Side"
        },
        {
          "value": "right",
          "label": "Right Side"
        }
      ],
      "default": "right"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Paw Print Color",
      "default": "#4ea7c4"
    },
    {
      "type": "range",
      "id": "opacity",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Opacity",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "show_free_sniffs",
      "label": "Show Free Sniffs Text",
      "default": true
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_background",
      "label": "Text Background",
      "default": "#f89c35"
    }
  ],
  "presets": [
    {
      "name": "Paw Print Element",
      "category": "Decorative"
    }
  ]
}
{% endschema %}
