{% comment %}
  Animal-Friendly Product Badge for SoapyFluffs - Based on Wokiee theme
  Subtly incorporates furry community references while maintaining broad appeal
{% endcomment %}

<div class="animal-friendly-badge">
  <div class="animal-friendly-badge__container">
    <div class="animal-friendly-badge__icon">
      {% if section.settings.use_custom_icon and section.settings.custom_icon != blank %}
        <img 
          src="{{ section.settings.custom_icon | img_url: '120x120', crop: 'center' }}" 
          alt="Animal Friendly" 
          class="animal-friendly-badge__custom-icon"
          width="60"
          height="60"
          loading="lazy">
      {% else %}
        <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg" class="animal-friendly-badge__svg">
          <path d="M17.75,30 C21.2,30 24,27.2 24,23.75 C24,20.3 21.2,17.5 17.75,17.5 C14.3,17.5 11.5,20.3 11.5,23.75 C11.5,27.2 14.3,30 17.75,30 Z" fill="currentColor"/>
          <path d="M42.25,30 C45.7,30 48.5,27.2 48.5,23.75 C48.5,20.3 45.7,17.5 42.25,17.5 C38.8,17.5 36,20.3 36,23.75 C36,27.2 38.8,30 42.25,30 Z" fill="currentColor"/>
          <path d="M12.75,42.5 C16.2,42.5 19,39.7 19,36.25 C19,32.8 16.2,30 12.75,30 C9.3,30 6.5,32.8 6.5,36.25 C6.5,39.7 9.3,42.5 12.75,42.5 Z" fill="currentColor"/>
          <path d="M47.25,42.5 C50.7,42.5 53.5,39.7 53.5,36.25 C53.5,32.8 50.7,30 47.25,30 C43.8,30 41,32.8 41,36.25 C41,39.7 43.8,42.5 47.25,42.5 Z" fill="currentColor"/>
          <path d="M30,53.5 C35.8,53.5 40.5,48.8 40.5,43 C40.5,37.2 35.8,32.5 30,32.5 C24.2,32.5 19.5,37.2 19.5,43 C19.5,48.8 24.2,53.5 30,53.5 Z" fill="currentColor"/>
        </svg>
      {% endif %}
    </div>
    
    <div class="animal-friendly-badge__content">
      <h3 class="animal-friendly-badge__title">{{ section.settings.title }}</h3>
      <div class="animal-friendly-badge__description">{{ section.settings.description }}</div>
      
      {% if section.settings.show_certification and section.settings.certification_text != blank %}
        <div class="animal-friendly-badge__certification">
          {{ section.settings.certification_text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .animal-friendly-badge {
    background-color: {{ section.settings.background_color }};
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    position: relative;
    overflow: hidden;
  }
  
  {% if section.settings.show_paw_print_background %}
  .animal-friendly-badge:before {
    content: '';
    position: absolute;
    top: -20px;
    right: -20px;
    width: 120px;
    height: 120px;
    background-image: url("data:image/svg+xml,%3Csvg width='120' height='120' viewBox='0 0 120 120' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M35.5,60 C42.4,60 48,54.4 48,47.5 C48,40.6 42.4,35 35.5,35 C28.6,35 23,40.6 23,47.5 C23,54.4 28.6,60 35.5,60 Z' fill='{{ section.settings.paw_print_color | replace: '#', '%23' }}'/%3E%3Cpath d='M84.5,60 C91.4,60 97,54.4 97,47.5 C97,40.6 91.4,35 84.5,35 C77.6,35 72,40.6 72,47.5 C72,54.4 77.6,60 84.5,60 Z' fill='{{ section.settings.paw_print_color | replace: '#', '%23' }}'/%3E%3Cpath d='M25.5,85 C32.4,85 38,79.4 38,72.5 C38,65.6 32.4,60 25.5,60 C18.6,60 13,65.6 13,72.5 C13,79.4 18.6,85 25.5,85 Z' fill='{{ section.settings.paw_print_color | replace: '#', '%23' }}'/%3E%3Cpath d='M94.5,85 C101.4,85 107,79.4 107,72.5 C107,65.6 101.4,60 94.5,60 C87.6,60 82,65.6 82,72.5 C82,79.4 87.6,85 94.5,85 Z' fill='{{ section.settings.paw_print_color | replace: '#', '%23' }}'/%3E%3Cpath d='M60,107 C71.6,107 81,97.6 81,86 C81,74.4 71.6,65 60,65 C48.4,65 39,74.4 39,86 C39,97.6 48.4,107 60,107 Z' fill='{{ section.settings.paw_print_color | replace: '#', '%23' }}'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-size: contain;
    opacity: 0.1;
    z-index: 0;
  }
  {% endif %}
  
  .animal-friendly-badge__container {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
  }
  
  .animal-friendly-badge__icon {
    margin-right: 20px;
    flex-shrink: 0;
  }
  
  .animal-friendly-badge__svg {
    color: {{ section.settings.icon_color }};
  }
  
  .animal-friendly-badge__custom-icon {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }
  
  .animal-friendly-badge__content {
    flex-grow: 1;
  }
  
  .animal-friendly-badge__title {
    font-size: 20px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin-bottom: 5px;
  }
  
  .animal-friendly-badge__description {
    font-size: 14px;
    color: {{ section.settings.text_color }};
    margin-bottom: 10px;
  }
  
  .animal-friendly-badge__certification {
    font-size: 12px;
    font-weight: 600;
    color: {{ section.settings.certification_color }};
    background-color: {{ section.settings.certification_background }};
    display: inline-block;
    padding: 3px 8px;
    border-radius: 5px;
  }
  
  @media (max-width: 767px) {
    .animal-friendly-badge__container {
      flex-direction: column;
      text-align: center;
    }
    
    .animal-friendly-badge__icon {
      margin-right: 0;
      margin-bottom: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Animal-Friendly Badge",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Badge Title",
      "default": "Animal-Friendly Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Badge Description",
      "default": "Our products are never tested on animals and are made with ingredients that are safe for all furry friends. Free sniffs with every purchase!"
    },
    {
      "type": "checkbox",
      "id": "use_custom_icon",
      "label": "Use Custom Icon",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "custom_icon",
      "label": "Custom Icon"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#e0d5c1"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#4ea7c4"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#666666"
    },
    {
      "type": "checkbox",
      "id": "show_certification",
      "label": "Show Certification",
      "default": true
    },
    {
      "type": "text",
      "id": "certification_text",
      "label": "Certification Text",
      "default": "Cruelty-Free Certified"
    },
    {
      "type": "color",
      "id": "certification_color",
      "label": "Certification Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "certification_background",
      "label": "Certification Background Color",
      "default": "#4ea7c4"
    },
    {
      "type": "checkbox",
      "id": "show_paw_print_background",
      "label": "Show Paw Print Background",
      "default": true
    },
    {
      "type": "color",
      "id": "paw_print_color",
      "label": "Paw Print Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Animal-Friendly Badge",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}
