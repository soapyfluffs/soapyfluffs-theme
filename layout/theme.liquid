<!DOCTYPE html>
<html class="no-js" lang="{{ shop.locale }}" dir="{{ settings.text_direction }}">
<head>
  <!-- Basic page needs -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  <meta name="format-detection" content="telephone=no">

  <!-- Title and description -->
  <title>{{ page_title }}</title>
  <meta name="description" content="{{ page_description | escape }}">

  <!-- SEO -->
  {% if template contains 'product' %}
    {% if product.metafields.global.description_tag %}
      <meta name="description" content="{{ product.metafields.global.description_tag }}">
    {% endif %}
  {% endif %}

  <!-- Helpers -->
  {{ content_for_header }}

  <!-- CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ 'weglot_app.css' | asset_url | stylesheet_tag }}
  {% if settings.rtl_enabled %}
    {{ 'style-rtl.css' | asset_url | stylesheet_tag }}
  {% endif %}

  <!-- Favicon -->
  {% if settings.use_favicon %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  <!-- Fonts -->
  {% if settings.google_font_links != blank %}
    {{ settings.google_font_links }}
  {% endif %}
  {% if settings.google_font_styles != blank %}
    {{ settings.google_font_styles }}
  {% endif %}

  <!-- JS Variables -->
  <script>
    window.wokiee = window.wokiee || {};
    window.wokiee.currency = {{ shop.currency | json }};
    window.wokiee.money_format = {{ shop.money_format | json }};
    window.wokiee.shop_url = {{ shop.url | json }};
  </script>
</head>
<body class="{% if settings.use_boxed %}boxed{% endif %} {% if settings.use_rtl %}rtl{% endif %}">
  <!-- Preloader -->
  {% if settings.show_preloader %}
    {% render 'main-loader' %}
  {% endif %}

  <!-- Header -->
  {% if settings.header_design == 'header_type_1' %}
    {% section 'header-template' %}
  {% elsif settings.header_design == 'header_type_2' %}
    {% section 'header-template-2' %}
  {% elsif settings.header_design == 'header_type_3' %}
    {% section 'header-template-3' %}
  {% elsif settings.header_design == 'header_type_4' %}
    {% section 'header-template-4' %}
  {% endif %}

  <!-- Main Content -->
  <div class="page-wrapper">
    {% if settings.show_breadcrumbs and 'breadcrumbs' | snippet_exists %}
      {% render 'breadcrumbs' %}
    {% endif %}
    {{ content_for_layout }}
  </div>

  <!-- Footer -->
  {% section 'footer-template' %}

  <!-- Modals -->
  {% render 'modal-newsletter' %}
  {% render 'modal-quickview' %}
  {% render 'modal-addtocart' %}

  <!-- Back to Top -->
  {% if settings.show_back_to_top_button %}
    <div class="back-to-top">
      <span class="icon-arrow-up"></span>
    </div>
  {% endif %}

  <!-- Scripts -->
  {{ 'vendor.min.js' | asset_url | script_tag }}
  {{ 'theme.min.js' | asset_url | script_tag }}
  {% if settings.helper_info != blank %}
    <script src="{{ settings.helper_info }}"></script>
  {% endif %}
</body>
</html>